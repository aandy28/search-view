{
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "arrow-spacing": 2,
    "no-console": 1,
    "no-lonely-if": 2,
    "no-unused-vars": 1,
    "no-var": 1,
    "quotes": [1, "double"],
    "space-before-blocks": 2,
    "react/jsx-uses-react": [2],
    "react/jsx-uses-vars": [2]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"]
}
